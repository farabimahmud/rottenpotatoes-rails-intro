%h2 All Movies

= form_tag movies_path, :method => :get, :id => 'ratings_selection_form' do 
  Include:
  - @ratings_all.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", value= 0,  checked=false , :id => "ratings_#{rating}"
  = submit_tag 'Refresh', :id => 'ratings_submit'

